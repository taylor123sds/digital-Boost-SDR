import express from "express";
import bodyParser from "body-parser";
import cors from "cors";
import path from "path";
import { fileURLToPath } from "url";

import { agent } from "./agent.js"; 
import calendarGoogle from "./tools/calendar_google.js"; // ðŸ”¹ importa a ferramenta

// Corrige __dirname para ESModules
const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);

const app = express();
const PORT = process.env.PORT || 3000;

// Middlewares
app.use(cors());
app.use(bodyParser.json());
app.use(express.static(path.join(__dirname, "public")));

// ðŸ”¹ adiciona as ferramentas no agente
agent.setTools([
  calendarGoogle
]);

// Rota principal
app.post("/chat", async (req, res) => {
  try {
    const { message } = req.body;
    const reply = await agent.run(message);
    res.json({ reply });
  } catch (err) {
    console.error("Erro no agente:", err);
    res.status(500).json({ error: "Falha no agente" });
  }
});

// Inicia servidor
app.listen(PORT, () => {
  console.log(`ðŸ¤– Agente rodando em http://localhost:${PORT}`);
});

